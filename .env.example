# VTK RAG Configuration
# Copy to .env and customize. All values shown are defaults.

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_CODE_COLLECTION=vtk_code
QDRANT_DOCS_COLLECTION=vtk_docs

# Embeddings
EMBEDDING_DENSE_MODEL=all-MiniLM-L6-v2
EMBEDDING_SPARSE_MODEL=Qdrant/bm25

# RAG Search
RAG_TOP_K=5
RAG_USE_HYBRID=true
RAG_MIN_VISIBILITY=0.0

# Data Paths (relative to project root)
RAG_RAW_DIR=data/raw
RAG_CHUNK_DIR=data/processed
RAG_EXAMPLES_FILE=vtk-python-examples.jsonl
RAG_TESTS_FILE=vtk-python-tests.jsonl
RAG_DOCS_FILE=vtk-python-docs.jsonl
RAG_CODE_CHUNKS=code-chunks.jsonl
RAG_DOC_CHUNKS=doc-chunks.jsonl

# MCP
VTK_API_DOCS_PATH=data/raw/vtk-python-docs.jsonl
MCP_MAX_TOOL_ITERATIONS=10

# Start Qdrant: docker run -p 6333:6333 -p 6334:6334 qdrant/qdrant
